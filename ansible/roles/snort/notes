# gcc setup
gcc

# Snort setup standalone
wget https://www.snort.org/downloads/snort/snort-2.9.9.0.tar.gz
tar xvfz snort-2.9.9.0.tar.gz
cd snort-2.9.9.0
./configure --enable-sourcefire && make && sudo make install

# Snort setup docker
https://github.com/ellerbrock/docker-security-images
docker pull frapsoft/snort


docker run -v /etc/snort:/etc/snort -v /root/logs:/var/log/snort frapsoft/snort -c /etc/snort.conf -l /var/log/snort

mkdir -p /etc/snort
touch /etc/snort/snort.conf
docker run -v /etc/snort:/etc/snort -v /root/logs:/var/log/snort frapsoft/snort -c /etc/snort.conf -l /var/log/snort

docker run frapsoft/snort

